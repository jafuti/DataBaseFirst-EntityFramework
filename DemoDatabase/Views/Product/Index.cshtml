@model List<DemoDatabase.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<form class="form-inline" action="/product/index">
    <label for="search" class="mr-1">Search:</label>
    <input type="search" class="form-control mr-1" id="search" name="search" value="@ViewBag.search" placeholder="Search">
    <button type="submit" class="btn btn-primary">GO</button>
</form>
<div class="container row p-0 m-0">
<h2 class="text-info">List of Product</h2>
    <table class="table table-striped border">
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Date of purchase</th>
            <th>Availablity Status</th>
            <th>Category ID</th>
            <th>Brand ID</th>
            <th>Active</th>
            <th>

            </th>
        </tr>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductID</td>
                <td>@product.ProductName</td>
                <td>@product.Price</td>
                <td>@product.DateOfPurchase</td>
                <td>@product.AvailabilityStatus</td>
                <td>@product.CategoryID</td>
                <td>@product.BrandID</td>
                <td>@product.Active</td>
                <td>
                    <a href="/product/details/@product.ProductID" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </table>

</div>

