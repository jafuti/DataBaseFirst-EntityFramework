@model DemoDatabase.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Details</h2>

<table class="table">
    <tr>
        <th>Product ID</th>
        <td>@Model.ProductID</td>
    </tr>
    <tr>
        <th>Product Name</th>
        <td>@Model.ProductName</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>@Model.Price</td>
    </tr>
    <tr>
        <th>DateOfPurchase</th>
        <td>@Model.DateOfPurchase</td>
    </tr>
    <tr>
        <th>AvailabilityStatus</th>
        <td>@Model.AvailabilityStatus</td>
    </tr>
    <tr>
        <th>CategoryID</th>
        <td>@Model.CategoryID</td>
    </tr>
    <tr>
        <th>BrandID</th>
        <td>@Model.BrandID</td>
    </tr>
    <tr>
        <th>Active</th>
        <td>@Model.Active</td>
    </tr>
</table>
